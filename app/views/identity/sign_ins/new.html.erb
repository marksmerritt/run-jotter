<h1>Sign in</h1>

<br>

<%= form_with model: @user, url: sign_in_path, local: false, data: { turbo: false } do |form| %>
	<%= form.invisible_captcha %>

	<div id="sign_in_form_errors"></div>

	<%= render "identity/shared/continue_with_google" %>

	<br>

	<div>
		<%= form.label :email %>
		<%= form.email_field :email, id: "sign_in_email_field" %>
	</div>

	<br>

	<div>
		<%= form.label :password %>
		<%= form.password_field :password, id: "sign_in_password_field" %>
	</div>

	<br>

	<div>
		<%= form.submit "Sign in", id: "sign_in_button" %>
	</div>
<% end %>

<br>

<div>
	<div>
		<%= link_to "Forgot your password?", new_password_reset_path %>
	</div>

	<div>
		<%= link_to "Sign up", sign_up_path, data: { turbo: false } %>
	</div>
</div>
