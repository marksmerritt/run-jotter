<header>
	<div>
		<%= image_tag "logo.svg", class: "icon--lg" %>
	</div>

	<h1>Try RunJotter</h1>
	<h3>Free for 30 days • No credit card required • Cancel anytime</h3>
</header>

<main>
	<section>
		<div>
			<%= render "identity/shared/continue_with_google" %>

			<h4>Or, sign up with your email address</h4>

			<div>
				<% if @user.errors.any? %>
					<% @user.errors.full_messages.each do |message| %>
						<div><%= message %></div>
					<% end %>
				<% end %>
			</div>

			<%= form_with model: @user, url: sign_up_path, data: { turbo: false } do |form| %>
				<%= form.invisible_captcha %>

				<%= form.time_zone_select :time_zone, priority_time_zones, { default: browser_time_zone.name }, {} %>

				<div>
					<div>
						<%= form.email_field :email, id: "sign_up_email_field", placeholder: "Your email address", autofocus: true %>
						<%= form.label :email, "Your email address" %>
					</div>

					<div>
						<%= form.password_field :password, id: "sign_up_password_field", placeholder: "Choose a password" %>
						<%= form.label :email, "Choose a password" %>
					</div>
				</div>

				<div>
					<%= form.submit "Start jotting →", id: "sign_up_button" %>
				</div>
			<% end %>
		</div>
	</section>
</main>
