<%= link_to "Dashboard", dashboard_path %>

<h1>Your Profile</h1>

<%= form_with model: current_user, url: profile_path do |form| %>
	<div>
		<%= form.label :username %>
		<%= form.text_field :username %>
	</div>

	<div>
		<%= form.label :time_zone %>
		<%= form.time_zone_select :time_zone, priority_time_zones, { default: current_user.time_zone || browser_time_zone.name }, {} %>
	</div>

	<div>
		<%= form.button "Update" %>
	</div>
<% end %>

<h3>Sign in History</h3>

<% current_user.sign_ins.each do |sign_in| %>
	<table>
		<thead>
			<th>Time</th>
			<th>Browser</th>
			<th>Device</th>
			<th>OS</th>
			<th>IP</th>
		</thead>

		<tbody>
			<tr>
				<td><%= sign_in.created_at %></td>
				<td><%= sign_in.browser %></td>
				<td><%= sign_in.device %></td>
				<td><%= sign_in.os %></td>
				<td><%= sign_in.ip %></td>
			</tr>
		</tbody>
	</table>
<% end %>
